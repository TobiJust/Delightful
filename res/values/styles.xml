<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
    </style>

    <style name="MainMenuButton" parent="@android:Theme.Light">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">200px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="DelightfulSeekBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:thumb">@drawable/slider</item>
        <item name="android:maxHeight">5dp</item>
    </style>

    <style name="DelightfulLinearLayoutSeekBarStyle" parent="@android:Theme.Light">
        <item name="android:background">#DBDBDB</item>
        <item name="android:layout_marginTop">@dimen/control_seekbar_padding_top</item>
        <item name="android:layout_marginRight">@dimen/control_seekbar_padding_top</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="DelightfulLinearLayoutButtonBarLeftStyle" parent="@android:Theme.Light">
        <item name="android:layout_marginTop">@dimen/control_seekbar_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/control_seekbar_padding_top</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DelightfulLinearLayoutButtonBarRightStyle" parent="@android:Theme.Light">
        <item name="android:layout_marginTop">@dimen/control_seekbar_padding_top</item>
        <item name="android:layout_marginRight">@dimen/control_seekbar_padding_top</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DelightfulThemeSpinnerStyle" parent="@android:Theme.Light">
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:background">@drawable/spinner_button</item>
    </style>

    <style name="Widget.Spinner" parent="@android:Widget">
        <item name="android:background">@drawable/spinner_button</item>
        <item name="android:clickable">true</item>
    </style>

</resources>